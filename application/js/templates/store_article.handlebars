<article id="cart-item-{{item.id}}" class="cart-item">
    <div class="divider"></div>
    <div class="item-icon">
        <a href="/item/{{realm.id}}/{{item.itemid}}" class="item-link">
            <span class="icon-frame frame-36" style="background-image: url(/application/themes/shattered/images/icons/36/{{item.icon}}.jpg);"></span>
        </a>
    </div>
    <div class="item-price">
        <img src="{{url}}application/images/icons/lightning.png" align="absmiddle" />
        {{item.vp_price}}
    </div>
    <div class="item-name">
        <a href="#">{{item.name}}</a>
        <span class="qty" id="cart-quantity-{{item.id}}">[<span>x{{item.count}}</span>]</span>
    </div>
    <span class="item-nick">{{recipient}} @ {{realm.name}}</span>
    <a href="#" class="jsDeleteFromCart" data-item="{{item.id}}">Entfernen</a>
</article>